<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context="com.example.simplecalc.view.calcActivity">

    <!--Buttons On Calculator-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/display"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="right"
            android:text="0"
            android:textSize="40sp" />

    </LinearLayout>

    <GridLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4">


        <!--Row 1 Buttons-->
        <Button
            android:id="@+id/clear"
            style="@style/calcButton"
            android:tag="00"
            android:text="C" />

        <Button
            android:id="@+id/neg"
            style="@style/calcButton"
            android:tag="01"
            android:text="+/-" />

        <Button
            android:id="@+id/percent"
            style="@style/calcButton"
            android:tag="02"
            android:text="%" />

        <Button
            android:id="@+id/divide"
            style="@style/calcButton"
            android:tag="03"
            android:text="/" />

        <!--Row 2 Buttons-->
        <Button
            android:id="@+id/seven"
            style="@style/calcButton"
            android:tag="10"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            style="@style/calcButton"
            android:tag="11"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            style="@style/calcButton"
            android:tag="12"
            android:text="9" />

        <Button
            android:id="@+id/multiply"
            style="@style/calcButton"
            android:tag="13"
            android:text="*" />

        <!--Row 3 Buttons-->
        <Button
            android:id="@+id/four"
            style="@style/calcButton"
            android:tag="20"
            android:text="4" />

        <Button
            android:id="@+id/five"
            style="@style/calcButton"
            android:tag="21"
            android:text="5" />

        <Button
            android:id="@+id/six"
            style="@style/calcButton"
            android:tag="22"
            android:text="6" />

        <Button
            android:id="@+id/minus"
            style="@style/calcButton"
            android:tag="23"
            android:text="-" />

        <!--Row 4 Buttons-->
        <Button
            android:id="@+id/one"
            style="@style/calcButton"
            android:tag="30"
            android:text="1" />

        <Button
            android:id="@+id/two"
            style="@style/calcButton"
            android:tag="31"
            android:text="2" />

        <Button
            android:id="@+id/three"
            style="@style/calcButton"
            android:tag="32"
            android:text="3" />

        <Button
            android:id="@+id/add"
            style="@style/calcButton"
            android:tag="33"
            android:text="+" />

    </GridLayout>

    <GridLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1">

        <!--Row 5 Buttons-->
        <Button
            android:id="@+id/zero"
            style="@style/calcZero"
            android:tag="40"
            android:text="0" />

        <Button
            android:id="@+id/decimal"
            style="@style/calcButton"
            android:tag="41"
            android:text="." />

        <Button
            android:id="@+id/equal"
            style="@style/calcButton"
            android:tag="42"
            android:text="=" />

    </GridLayout>


</LinearLayout>